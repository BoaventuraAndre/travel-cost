<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <EditText
            android:id="@+id/edit_distance"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:inputType="number"
            android:hint="Distance" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Total KM"
            android:layout_gravity="center" />

    <EditText
            android:id="@+id/edit_price"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center"
            android:hint="Price" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Price per lite "
            android:layout_gravity="center" />

    <EditText
            android:id="@+id/edit_km"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:hint="Consumption" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="KM's per litre"
            android:layout_gravity="center" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="YOUR TOTAL EXPENSE WILL BE:" />


    <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:textSize="46sp"
            android:textColor="#2A6DF4"
            android:text="0â‚¬" />

    <Button

            android:id="@+id/btn_calculate"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Calculate"
            android:layout_gravity="center" />


</LinearLayout>